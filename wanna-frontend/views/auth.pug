doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .container-full
      .login-wrap
        .login-html
          input#tab-1.sign-in(type='radio' name='tab' checked='')
          label.tab(for='tab-1') Iniciar
          input#tab-2.sign-up(type='radio' name='tab')
          label.tab(for='tab-2') Registo
          .login-form
            form.sign-in-htm(method="POST" action="/makeLogin")
              .group
                label.label(for='email') Email
                input.input(type="email" placeholder="Email" name="email" required)
              .group
                label.label(for='password') Password
                input.input(type="password" placeholder="Password" name="password" required)
              .group
                input.button(type='submit' value='Entrar')
              div
                br
                button.loginBtn.loginBtn--facebook Iniciar com Facebook
                button.loginBtn.loginBtn--google Iniciar com Google
            form.sign-up-htm(method="POST" action="/makeRegister")
              div(style='width: 50%; float: left; padding-right: 10px;')
                .group
                  label.label(for='firstName') Primeiro Nome
                  input.input(type="text" placeholder="Primeiro Nome" name="firstName" required)
                .group
                  label.label(for='lastName') &Uacute;ltimo Nome
                  input.input(type="text" placeholder="Último Nome" name="lastName" required)
              div(style='width: 50%; float: right; padding-left: 10px;')
                .group
                  label.label(for='username') Usermame
                  input.input(type="text" placeholder="Nome de Utilizador" name="username" required)
                .group
                  label.label(for='location') Localiza&ccedil;&atilde;o
                  input.input(type="text" placeholder="Localização" name="location" required)
              .group
                label.label(for='email') Email
                input.input(type="email" placeholder="Email" name="email" required)
              .group
                label.label(for='password') Password
                input.input(type="password" placeholder="Password" name="password" required)
              .group
                input.button(type='submit' value='Registar')